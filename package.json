{
	"name": "polymath",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"start": "node ./bin/www",
		"dev": "set DEBUG=polymath:* & npm start",
		"lint": "eslint --ignore-path .eslintignore --ext .js,.ts,.tsx .",
		"lint:fix": "npm run lint -- --fix",
		"prepare": "husky install"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged && pretty-quick --staged"
		}
	},
	"dependencies": {
		"cookie-parser": "~1.4.4",
		"debug": "~2.6.9",
		"ejs": "~2.6.1",
		"express": "~4.16.1",
		"http-errors": "~1.6.3",
		"morgan": "~1.9.1"
	},
	"devDependencies": {
		"eslint": "^8.2.0",
		"eslint-config-airbnb-base": "^15.0.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.25.3",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^7.0.0",
		"lint-staged": "^12.0.2",
		"prettier": "^2.4.1",
		"pretty-quick": "^3.1.2"
	}
}
